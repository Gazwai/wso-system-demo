<div class="flex items-center justify-center min-h-screen bg-base-200 font-avenir">
  <div class="w-full max-w-md shadow-xl card bg-base-100">
    <div class="card-body">
      <h2 class="mb-6 text-2xl font-black tracking-tight text-center uppercase text-wso-navy">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="mb-4 form-control">
          <%= f.label :email, class: "label label-text font-bold text-wso-navy" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered focus:input-primary w-full" %>
        </div>

        <div class="mb-4 form-control">
          <%= f.label :password, class: "label label-text font-bold text-wso-navy" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered focus:input-primary w-full" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-6 form-control">
            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :remember_me, class: "checkbox checkbox-sm checkbox-primary" %>
              <span class="label-text">Remember me</span>
            </label>
          </div>
        <% end %>

        <div class="form-control">
          <%= f.submit "Log in", class: "btn bg-wso-blue hover:bg-wso-navy text-white border-none uppercase w-full" %>
        </div>
      <% end %>

      <div class="mt-4 text-sm text-center">
        <%= render "devise/shared/links" %>

        <p class="mt-3 font-bold">Test User</p>

        <p>test@gmail.com</p>

        <p>123456</p>
      </div>
    </div>
  </div>
</div>
