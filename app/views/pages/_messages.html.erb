<div class="w-11/12 border shadow-sm card bg-base-100 border-neutral-content ">
  <div class="card-body">
    <div class="flex justify-between w-full">
      <h2 class="uppercase card-title">Latest Messages</h2>

      <%= link_to 'VIEW ALL', "#", class: "text-wso-blue" %>
    </div>

    <% @messages.each do |message| %>
      <div class="flex mt-4 border rounded-lg p-4 transition-colors hover:cursor-pointer <%= message.read ? "border-neutral-content bg-base-200 hover:bg-base-300" : "border-wso-blue bg-blue-50 hover:bg-blue-100" %>">
        <div class="flex justify-between w-full">
          <div class="flex flex-col w-full gap-1">
            <h2 class="card-title"><%= message.title %></h2>

            <p><%= message.subject %></p>

            <p><i class="mr-1 fa-regular fa-clock"></i><%= time_ago_in_words(message.created_at) %> ago</p>
          </div>

          <% unless message.read  %>
            <div class="indicator">
              <span class="indicator-item status bg-wso-blue"></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
